{
  "name": "remark42-site",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Official site of Remark42",
  "repository": "git@github.com:akellbl4/remark42-site.git",
  "engines": {
    "node": ">=10.15.0"
  },
  "scripts": {
    "dev": "rm -rf .cache && yarn build:assets && run-p dev:hugo dev:assets",
    "dev:assets": "gulp watch",
    "dev:hugo": "hugo serve --gc --disableFastRender --port ${HUGO_PORT:-1313}",
    "build": "run-s build:*",
    "build:assets": "gulp",
    "build:hugo": "hugo --gc --minify"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-connect": "^5.7.0",
    "gulp-hash": "^4.2.2",
    "gulp-postcss": "^9.0.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.1",
    "postcss-import": "^12.0.1",
    "postcss-modules": "^3.2.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ],
    "overrides": [
      {
        "files": "gulpfile.js",
        "extends": [
          "plugin:node/recommended"
        ],
        "rules": {
          "no-process-exit": "off",
          "node/no-unpublished-require": "off",
          "node/shebang": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
